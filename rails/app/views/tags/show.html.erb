<p id="notice"><%= notice %></p>

<p>
  <strong>Tag Name:</strong>
  <%= @tag.name %>
</p>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tag.posts.each do |post| %>
      <tr>
        <td><%= post.user_id %></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', tags_path %>
